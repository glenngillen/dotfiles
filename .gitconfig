[user]
	name = Glenn Gillen
	email = me@glenngillen.com
	signingkey = 69FA576E56A9C4EDAB44EC641B634BA2486C4F6C
[includeIf "gitdir:~/Development/work/"]
	path = ~/Development/work/.gitconfig
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[branch]
	autosetupmerge = true
[push]
	default = tracking
	autoSetupRemote = true
[github]
	user = glenngillen
[alias]
	ci = commit
	co = checkout
	logl = log --pretty=oneline --abbrev-commit --decorate
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %f %Cgreen(%cr)%Creset' --abbrev-commit --date=relative --all
	unadd = update-index --force-remove
	ls = !git ls-files -m | xargs ls -la
	praise = blame
	fpush = push

[core]
	excludesfile = /Users/glenn/.gitignore_global
	editor = code --wait
[merge "gemfilelock"]
	name = relocks the gemfile.lock
	driver = bundle install
[init]
	templatedir = ~/.git-templates
[commit]
	gpgsign = true
[gpg]
	program = /opt/homebrew/bin/gpg
[diff]
	external = difft	
[credential]
	helper = 
	helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
[filter "nbstripout"]
	clean = \"/opt/homebrew/anaconda3/bin/python3\" -m nbstripout
	smudge = cat
	required = true
[diff "ipynb"]
	textconv = \"/opt/homebrew/anaconda3/bin/python3\" -m nbstripout -t
[diff "jupyternotebook"]
	command = git-nbdiffdriver diff
[merge "jupyternotebook"]
	driver = git-nbmergedriver merge %O %A %B %L %P
	name = jupyter notebook merge driver
[difftool "nbdime"]
	cmd = git-nbdifftool diff \"$LOCAL\" \"$REMOTE\" \"$BASE\"
[difftool]
	prompt = false
[mergetool "nbdime"]
	cmd = git-nbmergetool merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
[mergetool]
	prompt = false
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
