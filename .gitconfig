[user]
	name = Glenn Gillen
	email = me@glenngillen.com
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[branch]
	autosetupmerge = true
[push]
	default = tracking
[github]
	user = glenngillen
[alias]
	ci = commit
	co = checkout
	logl = log --pretty=oneline --abbrev-commit --decorate
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %f %Cgreen(%cr)%Creset' --abbrev-commit --date=relative --all
	unadd = update-index --force-remove
	ls = !git ls-files -m | xargs ls -la
	praise = blame

[core]
	excludesfile = /Users/glenn/.gitignore_global
